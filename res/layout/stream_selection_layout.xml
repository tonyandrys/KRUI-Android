<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@drawable/bg_japan_thin"
                android:id="@+id/audio_selector_root_container_relativelayout">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/audio_selector_container_relativelayout"
            android:layout_below="@+id/welcome_container_relativelayout" android:layout_alignParentTop="false">
        <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:background="@drawable/audio_selection_shape"
                        android:id="@+id/main_studio_stream_button" android:layout_margin="5dp">
                    <ImageView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView" android:layout_column="0"
                            android:src="@drawable/krui_logo_red" android:padding="5dp"
                            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_studio_copy"
                            android:id="@+id/textView" android:layout_column="1"
                            android:textSize="15sp" android:layout_below="@+id/imageView"
                            android:gravity="center_horizontal" android:paddingLeft="5dp" android:paddingTop="5dp"
                            android:paddingRight="5dp" android:paddingBottom="10dp"/>
                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/main_studio_title"
                            android:id="@+id/textView3" android:layout_toRightOf="@+id/imageView"
                            android:layout_marginTop="10dp" android:gravity="center_horizontal"
                            android:textSize="30sp"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                                android:background="@drawable/audio_selection_shape" android:id="@+id/the_lab_stream_button"
                                android:layout_marginTop="20dp" android:layout_margin="5dp">
                    <ImageView android:layout_width="80dp" android:layout_height="wrap_content"
                               android:id="@+id/imageView2" android:layout_column="0"
                               android:src="@drawable/thelab_logo_small" android:padding="5dp"
                               android:layout_alignParentTop="true" android:layout_alignParentLeft="true"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="@string/the_lab_copy" android:id="@+id/textView4"
                              android:layout_column="1" android:textSize="15sp"
                              android:layout_below="@+id/imageView2" android:gravity="center_horizontal"
                              android:paddingLeft="5dp" android:paddingTop="5dp" android:paddingRight="5dp"
                              android:paddingBottom="10dp"/>
                    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                              android:text="@string/the_lab_title" android:id="@+id/textView5"
                              android:layout_toRightOf="@+id/imageView2" android:layout_marginTop="10dp"
                              android:gravity="center_horizontal" android:textSize="30sp"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:id="@+id/welcome_container_relativelayout"
            android:gravity="center_horizontal" android:visibility="visible" android:layout_margin="5dp"
            android:background="@drawable/green_rounded_event">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_message"
                android:id="@+id/textView2" android:visibility="visible"
                android:padding="5dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm_welcome_message"
                android:id="@+id/hide_welcome_message_button" android:layout_below="@+id/textView2" android:layout_centerHorizontal="true"
                android:textSize="15sp"/>
    </RelativeLayout>
</RelativeLayout>